root = true

#########################################################
# üìÑ –û–±—â–∏–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –¥–ª—è –≤—Å–µ—Ö —Ñ–∞–π–ª–æ–≤
#########################################################
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
